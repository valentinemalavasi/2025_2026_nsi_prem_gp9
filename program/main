#La fonction montre la page permettant de faire des virements
def go_to_payment_page ():
    print("To make a payment, enter 1.\n"
          "To go back to main page, enter 2.")
    if int(input) == 1:
        make_a_payment ()
    elif int(input) == 2:
        main_page ()

